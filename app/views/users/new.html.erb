<div style="float:left">
  <h1>Join teefury clone!</h1>
  <%= render "form", :user => @user %>
</div>
<div class="jumbotron" style="float:right; width:66%">
  <h1>Guest Account</h1>
  <p>You don't have to create a user, just login with our Guest account to test TeeFuryClone!</p>
  <form action="<%= session_url %>" method="post">
    <input
       name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>">
     <input
        id="user_username"
        name="user[username]"
        type="hidden"
        value="guest">
     <input
        id="user_password"
        name="user[password]"
        type="hidden"
        value="password">

      <input style="height: 184px; font-size: 6em;" id="rainbow" class="btn btn-danger" type="submit" value="Login as Guest!">
  </form>
</div>

<script>
$(document).ready(function() {
  var colors =["btn-danger", "btn-warning", "btn-primary", "btn-success", "btn-info", "btn-default"];
 setInterval(
   function() { $('#rainbow').attr("class", "btn btn-lg btn-block " + colors[Math.floor(Math.random() * colors.length)]) }, 200);
 });
</script>
