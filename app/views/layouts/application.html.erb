<!DOCTYPE html>
<html>
<head>
  <title>TeeFuryClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
  <div id="header">
    <div id="header-top" class="navbar navbar-inverse">
      <ul class="nav nav-pills">

        <% if !current_user.nil? %>
          <li><a href="users/<%= current_user.id %>">Hello <%= current_user.username %></a></li>

          <li><%= link_to "Logout", session_url, :method => :delete %></li>
        <% else %>
          <li><a href="<%= new_session_url %>">Login</a></li>
          <li><a href="<%= new_user_url %>">Sign Up</a></li>
        <% end %>
      </ul>
    </div>
  	<div id="header-bottom" class="collapse navbar-collapse">
  		<ul class="nav nav-pills">
  			<li><a href="/#">Today's Tee</a></li>
  			<li><a href="/#gallery">Gallery</a></li>
  			<li><a href="/#submit">Submit</a></li>
  		</ul>
  	</div>
  </div>
  </nav>
  <div id="content">
      <%= yield %>
  </div>
</body>
</html>
