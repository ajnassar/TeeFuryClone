<div class="show-shirt-content">
  <h3>Main Content</h3>
  <% if (shirt.escape('model_url_big') != "/model_imgs/big/missing.png"){ %>
    <div class="image-backdrop">
      <img style="background-color: <%= shirt.escape('color') %>"
      src="<%= shirt.escape('model_url_big') %>"></img>
    </div>
  <% } %>
  <% if (shirt.escape('design_url_big') != "/model_imgs/big/missing.png"){ %>
  <div class="image-backdrop">
    <img style="background-color: <%= shirt.escape('color') %>"
    src="<%= shirt.escape('design_url_big') %>"></img>
  </div>
  <% } %>
  <div class="post-comment-div">
    <button id="submit-comment" class="btn btn-danger">Comment</button>
    <p><span>90</span>Comments</p>
    <textarea id="comment-body" style="margin-top:10px;width:100%" cols="5" rows="5" name="comments" id="comment"></textarea>
  </div>
  <div id="commentShowHide">
    <a href="JavaScript:void(0);">Hide all comments</a>
  </div>
  <div class="shirt-comments">
  </div>
</div>

<div class="show-shirt-sidebar">
  <div class="btn-group">
    <button id="prev" type="button" class="btn btn-default">Prev</button>
    <button id="gallery" type="button" class="btn btn-default">Gallery</button>
    <button id="next" type="button" class="btn btn-default">Next</button>
  </div>
  <div>
    <button id="edit_shirt" type="button" class="btn btn-primary">Edit Shirt</button>
    <button id="buy_shirt" type="button" class="btn btn-danger">Buy Shirt!</button>
  </div>
</div>